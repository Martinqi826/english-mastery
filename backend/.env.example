# 应用配置
APP_NAME=English Mastery API
APP_VERSION=1.0.0
DEBUG=true

# API 配置
API_V1_PREFIX=/api/v1

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=english_mastery

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT 配置
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# 密码加密
BCRYPT_ROUNDS=12

# CORS 配置 (* 表示允许所有域名，生产环境请指定具体域名)
CORS_ORIGINS=*

# 限流配置
RATE_LIMIT_PER_MINUTE=100

# 微信支付配置
WECHAT_MCHID=
WECHAT_APPID=
WECHAT_API_KEY=
WECHAT_CERT_SERIAL_NO=
WECHAT_PRIVATE_KEY_PATH=
WECHAT_NOTIFY_URL=

# 支付宝配置
ALIPAY_APP_ID=
ALIPAY_PRIVATE_KEY=
ALIPAY_PUBLIC_KEY=
ALIPAY_NOTIFY_URL=

# 腾讯云 COS 配置
COS_SECRET_ID=
COS_SECRET_KEY=
COS_REGION=ap-guangzhou
COS_BUCKET=
